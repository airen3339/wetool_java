<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zhazhapan.util.visual.controller.QrCodeGeneratorController">
    <HBox prefHeight="154.0" prefWidth="600.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextArea fx:id="content" prefHeight="134.0" prefWidth="449.0" promptText="文本" HBox.hgrow="ALWAYS"/>
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#generateQrCode" prefHeight="134.0" prefWidth="91.0" text="生成" HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
    </HBox>
    <ImageView fx:id="qrCode" fitHeight="247.0" fitWidth="565.0" pickOnBounds="true" preserveRatio="true"
               VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </ImageView>
</VBox>
